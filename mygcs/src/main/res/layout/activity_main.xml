<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignTop="@+id/map"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:onClick="onBtnConnectTap"
        android:text="Connect" />

    <Button
        android:id="@+id/btnArmTakeOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_alignBottom="@+id/map"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:onClick="onArmButtonTap"
        android:visibility="invisible" />

    <TableRow
        android:id="@+id/jeongbochang"
        android:layout_width="723dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        >

        <TableRow
            android:id="@+id/vehTelemRow1"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/map">

            <TextView
                android:id="@+id/vehicleModeLabelTextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Mode:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/modeSelect"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_below="@+id/connectionTypeLabel"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/btnConnect"
                android:spinnerMode="dropdown" />
        </TableRow>

        <TableRow
            android:id="@+id/vehTelemRow2"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/map"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/vehTelemRow1">

            <TextView
                android:id="@+id/altitudeLabelTextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="고도:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/altitudeValueTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="0m"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:id="@+id/vehTelemRow3"
            android:layout_width="114dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/map"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/vehTelemRow2">

            <TextView
                android:id="@+id/speedLabelTextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="속도:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/speedValueTextView"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="0m/s"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />
        </TableRow>


        <TableRow
            android:id="@+id/vehTelemRow4"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/vehTelemRow3">

            <TextView
                android:id="@+id/distanceLabelTextView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_alignStart="@+id/vehTelemRow4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="거리:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/distanceValueTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_alignEnd="@+id/vehTelemRow4"
                android:layout_gravity="left"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="0m"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />
        </TableRow>

    </TableRow>


</RelativeLayout>